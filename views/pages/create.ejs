<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <h2>Create User</h2>
    <form method="POST" action="/create">
        <div class="input-group mb-3">
            <input type="text" name="id" class="form-control" placeholder="Id-user" aria-label="id-user" aria-describedby="basic-addon1">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Ім'я</label>
                <input type="text" name="firstName" class="form-control" id="inputEmail4" placeholder="Введіть ім'я">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Прізвище</label>
                <input type="text" name="secondName" class="form-control" id="inputPassword4" placeholder="Введіть призвіще">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Номер групи</label>
            <input type="number" name="group" class="form-control" id="inputAddress" placeholder="291">
        </div>

        <div class="form-group">
            <label for="inputAddress2">Кількість звільнень</label>
            <input type="number" name="dismissal" class="form-control" id="inputAddress2" placeholder="">
        </div>
        <button type="submit" class="btn btn-primary">Відправити</button>
    </form>
</main>
</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>