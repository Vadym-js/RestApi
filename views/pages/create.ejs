<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Ім'я</label>
                <input type="text" class="form-control" id="inputEmail4" placeholder="Введіть ім'я">
            </div>
            <div class="form-group col-md-6">
